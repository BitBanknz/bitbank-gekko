{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "outDir": "./tmp",
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "ES2015"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "paths": {
      "*": [
        "typings/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}